mixin pageHeader(tituloTema, srcImagen)
    .page-header.theme-light.mb-5

        .container

            .row.align-items-center

                .col-12.col-lg-6

                    h3#curso-titulo-componente.curso-subtitulo Técnicas de conservación para productos derivados de frutas y hortalizas.
                    h1#curso-titulo-tema.curso-titulo= tituloTema

                    .brand-line-primary

                    .keywords
                        span.badge.badge-pill.badge-light.mr-2 #Ecológica
                        span.badge.badge-pill.badge-light.mr-2 #Orgánica
                        span.badge.badge-pill.badge-light.mr-2 #Resoluciones

                .col-12.col-lg-6

                    .d-none.d-lg-block
                        img(src= srcImagen, style="max-width: 100%").img-fluid

mixin navTemaItem(numero, titulo, ruta)
    li.list-group-item.nav-tema-item
        .row.align-items-center
            if numero == 'play'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-play
            else if numero == 'question'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-question
            else if numero == 'text'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-file-text-o
            else
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold= numero

            .col.ml-n2
                span.nav-tema-item__titulo 
                    a(href= ruta)= titulo
            .col-auto                                            
                a(href= ruta).btn.btn-light.nav-tema-item__btn
                    | Ver más

